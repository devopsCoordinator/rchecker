  <div class="page-header">
    <h1>設置デバイス</h1>
  </div>

<h2><%= @company.name %>のデバイス一覧</h2>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>製造コード</th>
      <th>モデル</th>
      <th>備考</th>
      <th>登録日</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.uuid %></td>
        <td><%= device.model_type %></td>
        <td><%= device.memo %></td>
        <td><%= device.created_at %></td>
        <td>
          <%= link_to '配給履歴',history_device_path(device),{:class => "btn btn-info btn"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
