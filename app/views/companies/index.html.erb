  <div class="page-header">
    <h1>会社</h1>
  </div>

<h2>一覧</h2>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>会社名</th>
      <th>地域</th>
      <th>担当者</th>
      <th>備考</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.area_id %></td>
        <td><%= company.representative_id %></td>
        <td><%= company.memo %></td>
        <td>
          <%= link_to '照会', company ,{:class => "btn btn-default btn"}%> <%= link_to '編集', edit_company_path(company) ,{:class => "btn btn-primary btn"} %> <%= link_to '削除', company, :class => "btn btn-danger btn", method: :delete, data: { confirm: '一度削除すると、データは復元出来ませんがよろしいでしょうか?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規登録', new_company_path    ,{:class => "btn btn-primary btn"} %>
