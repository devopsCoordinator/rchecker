<%= simple_form_for @representative, :html => { :class => 'form-horizontal' } do |f| %>
    <fieldset>
        <div class="form-group">
          <div class="col-lg-3">
      <%= f.input :name ,label: "担当者名"%>
    </div>
      </div>
        <div class="form-group">
          <div class="col-lg-3">
      <%= f.input :email ,label: "メールアドレス" %>
    </div>
    </div>
      <div class="form-group">
        <div class="col-lg-3">
      <%= f.input :mobile ,label: "携帯メールアドレス"  %>
    </div>
    </div>
          <div class="form-group">
        <div class="col-lg-3">
      <%= f.input :area_id ,label: "地域"  %>
    </div>
    </div>

      <div class="form-group">

      <%= f.submit '登録', :class => 'btn btn-primary btn' %>
      <%= link_to t('.cancel', :default => t("戻る")), representatives_path, :class => 'btn btn-default btn' %>
  </div>
  </fieldset>
  
<% end %>