<%= simple_form_for @representative, :html => { :class => 'form-horizontal' } do |f| %>
    <fieldset>
      <%= f.input :name ,as: :string,label: "担当者名",placeholder: "担当者名"%>
      <%= f.input :email,as: :email ,label: "メールアドレス",placeholder: "メールアドレス" %>
      <%= f.input :mobile, as: :email ,label: "携帯メールアドレス",placeholder: "携帯メールアドレス"  %>

      <div class="form-group">
        <%= f.label :area_id ,label: "地域" %><br />
        <%= f.collection_select :area_id, Area.all, :id, :name, {include_blank: true}, {:class => 'form-control'} %>
      </div>
      <div class="form-group">
      <%= f.submit '登録', :class => 'btn btn-primary btn' %>
      <%= link_to t('.cancel', :default => t("戻る")), representatives_path, :class => 'btn btn-default btn' %>
      </div>
  </fieldset>
<% end %>