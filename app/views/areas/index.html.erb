<div class="page-header">
    <h1>地域</h1>
</div>

<div class="panel panel-default">
  <div class="panel-heading">検索</div>
  <div class="panel-body">
  <%= search_form_for(@q,html: { method: :get, class: 'form-horizontal', role: 'form' }) do |f| %>
  <fieldset>
      <div class="form-group  col-lg-4">
        <%= f.label :name_cont, "地域名"%>
        <%= f.text_field :name_cont , class: 'form-control' ,placeholder: "地域名" %>
      </div>
      <div class="form-group col-lg-12">
        <%= f.label :memo_cont, "備考"%>
        <%= f.text_field :memo_cont , class: 'form-control' ,placeholder: "備考"%>
      </div>
      <div class="form-group">
        <div class="form-inline col-lg-12">
          <%= f.label :created_at , "登録日" %><br />
          <%= f.date_select :created_at_gteq, {include_blank: true}, {class: 'form-control'}   %>
   〜
          <%= f.date_select :created_at_lteq_end_of_day, {include_blank: true}, {class: 'form-control'}   %>
        </div>
      </div>
      <div class="form-group col-lg-12">
        <%= f.submit '検索', :class => 'btn btn-default btn' %>
      </div>
  </fieldset>
  <% end %>
  </div>
</div>

<h2>一覧</h2>
<p>全<%= @areas.size %>件</p>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th><%= sort_link @q ,:id, "#" %></th>
      <th><%= sort_link @q ,:name, "地域名" %></th>
      <th><%= sort_link @q ,:memo, "備考" %></th>
      <th><%= sort_link @q ,:created_at, "登録日" %></th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.id %></td>
        <td><%= area.name %></td>
        <td><%= area.memo %></td>
        <td><%= area.created_at %></td>
        <td>
          <%= link_to '照会', area ,{:class => "btn btn-default btn"}%> <%= link_to '編集', edit_area_path(area) ,{:class => "btn btn-primary btn"} %> <%= link_to '削除', area, :class => "btn btn-danger btn", method: :delete, data: { confirm: '一度削除すると、データは復元出来ませんがよろしいでしょうか?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


