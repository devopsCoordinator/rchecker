<%= simple_form_for @area, :html => { :class => 'form-horizontal' } do |f| %>
    <fieldset>
        <div class="form-group">
          <div class="col-lg-3">
      <%= f.input :name ,label: "地域名"%>
    </div>
    </div>
      <div class="form-group">
        <div class="col-lg-3">
      <%= f.input :memo ,label: "備考"  %>
    </div>
    </div>
      <div class="form-group">

      <%= f.submit '登録', :class => 'btn btn-primary btn' %>
      <%= link_to t('.cancel', :default => t("戻る")), areas_path, :class => 'btn btn-default btn' %>
  </div>
  </fieldset>
  
<% end %>